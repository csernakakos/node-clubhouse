extends base

block content
    h2 Sign up

    form.form(action="" method="POST")
        input(type="text" name="firstName" placeholder="first name")
        input(type="text" name="lastName" placeholder="last name")
        input(type="text" name="email" placeholder="email")
        input(type="password", name="password" placeholder="password")
        input(type="password", name="passwordConfirmation" placeholder="repeat password")
        div.isAdmin
            label(for="isAdmin" name="isAdmin" value="Are you an admin?") Are you an admin?
            input.checkbox(type="checkbox", name="isAdmin")
        button
            a.button.disabled Sign up
